import React from 'react';
import type { Question } from '../types';

interface QuizProps {
  question: Question;
  onAnswer: (value: string) => void;
  onBack: () => void;
  progress: number;
  isFirstQuestion: boolean;
}

const Quiz: React.FC<QuizProps> = ({ question, onAnswer, onBack, progress, isFirstQuestion }) => {
  return (
    <div className="w-full max-w-2xl mx-auto p-4 md:p-8 bg-white rounded-2xl shadow-lg">
      <div className="mb-6">
        <div className="flex justify-between items-center mb-2 text-sm text-green-700">
          <span>진행도</span>
          <span>{Math.round(progress * 100)}%</span>
        </div>
        <div className="w-full bg-green-100 rounded-full h-2.5">
          <div
            className="bg-green-600 h-2.5 rounded-full transition-all duration-500 ease-out"
            style={{ width: `${progress * 100}%` }}
          ></div>
        </div>
      </div>

      <div className="text-center">
        <p className="text-gray-500 mb-2 text-lg">질문 {question.id}</p>
        <h2 className="text-2xl md:text-3xl font-bold text-gray-800 mb-8 leading-relaxed">
          {question.text}
        </h2>
      </div>

      <div className="grid grid-cols-1 gap-4">
        {question.options.map((option) => (
          <button
            key={option.value}
            onClick={() => onAnswer(option.value)}
            className="w-full text-lg text-green-800 bg-green-50 border-2 border-green-200 rounded-xl px-6 py-4 text-center hover:bg-green-200 hover:border-green-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 transform hover:scale-105"
          >
            {option.text}
          </button>
        ))}
      </div>

      <div className="mt-8 text-center">
        {!isFirstQuestion && (
          <button
            onClick={onBack}
            className="text-gray-500 hover:text-gray-700 font-semibold py-2 px-4 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-green-500"
            aria-label="이전 질문으로 돌아가기"
          >
            &larr; 이전 질문
          </button>
        )}
      </div>
    </div>
  );
};

export default Quiz;